CC = gcc
CFLAGS = -O0 -Wall
LDFLAGS = -lm

DELAY=1000

all: work1 work2 work3 work4 work5 work6 work7


work1: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=1 -DDELAY=$(DELAY) -o ../work/work1 ../work/work.c

work2: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=2 -DDELAY=$(DELAY) -o ../work/work2 ../work/work.c

work3: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=3 -DDELAY=$(DELAY) -o ../work/work3 ../work/work.c

work4: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=4 -DDELAY=$(DELAY) -o ../work/work4 ../work/work.c

work5: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=5 -DDELAY=$(DELAY) -o ../work/work5 ../work/work.c

work6: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=6 -DDELAY=$(DELAY) -o ../work/work6 ../work/work.c

work7: ../work/work.c
	$(CC) $(CFLAGS) -DLOAD=7 -DDELAY=$(DELAY) -o ../work/work7 ../work/work.c
